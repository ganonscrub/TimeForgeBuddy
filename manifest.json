{
  "manifest_version": 2,

  "name": "TimeForge Buddy",
  "description": "Adds extra functionality to TimeForge",
  "version": "0.1",
  
  "content_scripts": [
	{
		"matches": ["*://*.timeforge.com/*"],
		"js": ["contentscript.js"]
	}
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
	"storage"
  ]
}